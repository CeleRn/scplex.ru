<%- partial('common/main-title', {area: true, container: true}) %>

  <div class="container">
    <div class="description-block">
      <%- markdown(page.content) %>
    </div>
    <div class="order">
    
      <form class="order__form" action="https://formspree.io/info@scplex.ru" name="Order" method="POST" onsubmit="yaCounter48243125.reachGoal('submit_form'); return true;">
      
        <input type="hidden" name="_subject" value="Заявка с сайта!" />
        <input type="hidden" name="_cc" value="vladimir@scplex.ru" />
        <input type="text" name="_gotcha" style="display:none" />
        
        <div class="order__contacts">
          <h2 class="order__title">Как с вами связаться?</h2>
          <div class="order__block order__block_33">
            <div class="form__input-block form__input-block_with-icon">
              <%- partial('common/svg-sprite-element', {icon: "person", cssSelector: "form__icon"}) %>
                <div class="form-input">
                  <input class="form-input__input" name="name" id="name" type="text" required>
                  <label class="form-input__label" for="name">Ваше имя</label>
                  <div class="form-input__border-bottom"></div>
                  <div class="form-input__message" data-error="Обязательное поле" data-success="Принято"></div>
                </div>
            </div>
          </div>
          <div class="order__block order__block_33">
            <div class="form__input-block form__input-block_with-icon">
              <%- partial('common/svg-sprite-element', {icon: "mobile", cssSelector: "form__icon"}) %>
                <div class="form-input">
                  <input class="form-input__input" name="phone" id="phone" type="tel" required>
                  <label class="form-input__label" for="phone" data-error="Обязательное поле" data-success="Принято">Номер телефона</label>
                  <div class="form-input__border-bottom"></div>
                  <div class="form-input__message" data-error="Введите корректный номер телефона"></div>
                </div>
            </div>
          </div>
          <div class="order__block order__block_33">
            <div class="form__input-block form__input-block_with-icon">
              <%- partial('common/svg-sprite-element', {icon: "mail", cssSelector: "form__icon"}) %>
                <div class="form-input">
                  <input class="form-input__input" name="email" id="email" type="email" required>
                  <label class="form-input__label" for="email" data-error="Обязательное поле" data-success="Принято">Email</label>
                  <div class="form-input__border-bottom"></div>
                  <div class="form-input__message" data-error="Введите корректный email"></div>
                </div>
            </div>
          </div>
          <div class="order__block order__block_100">
            <div class="checkbox">
              <label>
                <input type="checkbox" name="legal" value="true" required />
                <i class="helper"></i>Я принимаю
                <a href="<%= config.main_url %>/terms-of-use.html" target="_blank">соглашение сайта</a> об обработке персональных данных.
              </label>
            </div>
          </div>
        </div>
        <div class="collapse" id="more-clients-info">
          <div class="order__address">
            <h2 class="order__title">Адрес, на котором находиться устройство</h2>
            <div class="order__block order__block_50">
              <div class="form-input">
                  <select class="form-input__input" name="clients-city" id="clients-city">
                      <option disabled >Выберите город/район</option>
                      <% for (subdomain in site.data.subdomains) { %>
                        <option value="<%= subdomain %>"<% if(subdomain == config.subdomain.alias) { %> selected<% } %>><%= site.data.subdomains[subdomain] %></option>
                      <% } %>
                    </select>
                    <label class="form-input__label form-input__label_in-top" for="clients-city">Город</label>
                <div class="form-input__border-bottom"></div>
              </div>
            </div>
            <div class="order__block order__block_50">
              <div class="form-input">
                <input class="form-input__input" name="clients-address" id="clients-address" type="text">
                <label class="form-input__label" for="clients-address">Улица, дом, подъезд, этаж, квартира</label>
                <div class="form-input__border-bottom"></div>
              </div>
            </div>
          </div>
          <div class="order__cause">
              <h2 class="order__title">Причина обращения</h2>
              <div class="order__block order__block_100">
                <div class="form-input">
                  <textarea class="form-input__input" name="cause" id="cause" type="text" rows="4"></textarea>
                  <label class="form-input__label" for="cause">Опишите проблему, и что Вы ждете от нас</label>
                  <div class="form-input__border-bottom"></div>
                </div>
              </div>
            </div>
        </div>
        <div class="order__more-link">
          <a href="#more-clients-info" class="order__button collapsed" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="more-clients-info">дополнительную информацию</a>
        </div>
        <div netlify-recaptcha></div>
        <div class="order__footer">
          <button class="form__submit" type="submit">Отправить заявку</button>
        </div>
      </form>
    </div>
  </div>