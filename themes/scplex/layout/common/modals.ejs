<!-- Modal -->
<div class="modal fade" id="changeCity" tabindex="-1" role="dialog" aria-labelledby="changeCityTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="changeCityTitle">Выберите ваш город</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% var subdomains = site.data.subdomains; %>
        <ul>
          <% if (isMainDomain(config.subdomain.alias)) { %>
            <% for (var subdomain in subdomains) { %>
              <li>
                <a href="#" class="change-city-link change-city-link_cookie" id="city-<%= subdomain %>" data-alias="<%= subdomain %>">
                  <%= subdomains[subdomain] %>
                </a>
              </li>
            <% } %>
          <% } else { %>
            <% for (var subdomain in subdomains) { 
              var currentUrl = 'https://' + subdomain + '.' + config.main_domain + url_for(page.path).replace("index.html", "") %>
              <li>
                <a class="change-city-link" href="<%= currentUrl %>"><%= subdomains[subdomain] %></a>
              </li>
            <% } %>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</div>

