<ul class="main-menu" id="main-menu">
  <% var mainMenu = site.data.menu.main;
  for(item in mainMenu) { %>
    <li class="main-menu__item menu-item">
      <span class="menu-item__title">
        <%= mainMenu[item].name %>
      </span>

      <div class="menu-item__more dropdown">
        <a href="<%= mainMenu[item].url %>" class="menu-item__more-main-link"><%= mainMenu[item].itemsName %></a>
        <a href="#" class="menu-item__more-link" data-toggle="dropdown" aria-haspopup="true"
          aria-expanded="false">
          <%- partial('../svg-sprite-element', {icon: "arrow-down", cssSelector: "menu-item__more-icon"}) %>
        </a>
        <ul class="menu-item__second-menu second-menu dropdown-menu dropdown-menu-right">
          <% var childs = mainMenu[item].childs;
          for(child in childs) { %>
            <li class="second-menu__item">
              <a href="<%= childs[child].url %>" class="second-menu__link dropdown-item"><%= childs[child].name %></a>
            </li>
          <% } %>
        </ul>
      </div>

    </li>
    <% } %>
</ul>